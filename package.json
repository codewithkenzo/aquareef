{
  "name": "blaze",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered social media marketing automation platform",
  "keywords": [
    "social-media-marketing",
    "ai-automation",
    "content-generation",
    "multi-platform",
    "analytics",
    "scheduling"
  ],
  "author": "Blaze Development Team",
  "license": "MIT",
  "workspaces": [
    "src/frontend",
    "src/core",
    "src/cli",
    "src/server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=src/frontend",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=src/frontend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codewithkenzo/blaze.git"
  },
  "bugs": {
    "url": "https://github.com/codewithkenzo/blaze/issues"
  },
  "homepage": "https://github.com/codewithkenzo/blaze#readme"
} 